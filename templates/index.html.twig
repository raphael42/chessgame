{% extends 'base.html.twig' %}

{% block javascripts %}
    <script>
        const PIECESIMGURL = "{{ asset('assets/img/pieces/playerColor-chessboard.png') }}";
        const GAMEURL = "{{ path('game', {'url': 'TOREPLACE'}) }}";
    </script>

    {{ encore_entry_link_tags('homeJs') }}
{% endblock %}

{% block stylesheets %}
    {{ encore_entry_script_tags('homeJs') }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-3 col-md-12 col-sm-12">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Joueur</th>
                        <th>Temps</th>
                        <th>Mode</th>
                    </tr>
                </thead>
                <tbody class="tbody-waiting-games">
                </tbody>
            </table>
        </div>
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div id="board">
                {% for key, column in ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h'] %}
                    <div class="one-column">
                        {% for line in 8..1 %}
                            {% if key is even %}
                                <div id="{{ column ~ line }}" class="chess-table {{ line is even ? 'case-white' : 'case-black' }}"></div>
                            {% else %}
                                <div id="{{ column ~ line }}" class="chess-table {{ line is even ? 'case-black' : 'case-white' }}"></div>
                            {% endif %}
                        {% endfor %}
                        <div class="chess-column-letter"><span>{{ column }}</span></div>
                    </div>
                {% endfor %}
                <div class="one-column">
                    {% for line in 8..1 %}
                        <div class="chess-line-number"><span>{{ line }}</span></div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-4 col-sm-12 create-game-section">
            <button class="btn-dark btn" type="button" data-bs-toggle="modal" data-bs-target="#game-random">Créer une partie</button>
            <button class="btn-dark btn mb-3 mt-3" type="button" data-bs-toggle="modal" data-bs-target="#game-with-friend">Jouer avec un ami</button>
            <button class="btn-dark btn" disabled>Jouer contre l'ordinateur</button>
        </div>
    </div>

    <!-- Modal game with a friend -->
    <div class="modal fade" id="game-random" tabindex="-1" aria-labelledby="game-randomLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Créer une partie</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form(formRandom) }}
                </div>
            </div>
        </div>
    </div>

    <!-- Modal game with a friend -->
    <div class="modal fade" id="game-with-friend" tabindex="-1" aria-labelledby="game-with-friendLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5">Jouer avec un ami</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {{ form(formWithFriend) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
