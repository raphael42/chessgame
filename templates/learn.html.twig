                <div class="row">
                    <div class="col-12 col-md-6">
                        <a href="{{ path('learnGame', {'gameCategory': 'pawn', 'gameId': 1}) }}" class="no-decoration">
                            {% set borderClass = '' %}
                            {% set textClass = '' %}
                            {% if ongoingChallengesAdvancement.pawn is defined %}
                                {% set borderClass = 'border-primary' %}
                                {% set textClass = 'text-primary' %}
                            {% elseif finishedChallengesResult.pawn is defined %}
                                {% set borderClass = 'border-success' %}
                                {% set textClass = 'text-success' %}
                            {% endif %}
                            <div class="card text-bg-light mb-3 {{ borderClass }}">
                                <div class="card-body {{ textClass }}">
                                    <h5 class="card-title">Le pion</h5>
                                    <p class="card-text">Il se déplace uniquement vers l'avant</p>
                                </div>
                                {% if ongoingChallengesAdvancement.pawn is defined %}
                                    <span class="ribbon-wrapper">
                                        <span class="ribbon-display bg-primary text-white">{{ ongoingChallengesAdvancement.pawn }}</span>
                                    </span>
                                {% endif %}
                                {% if finishedChallengesResult.pawn is defined %}
                                    <span class="ribbon-wrapper">
                                        <span class="ribbon-display bg-success text-white">
                                            {% for i in 1..min(finishedChallengesResult.pawn, 3) %}
                                                <i class="bi bi-star-fill"></i>
                                            {% endfor %}
                                        </span>
                                    </span>
                                {% endif %}
                            </div>
                        </a>
                    </div>
